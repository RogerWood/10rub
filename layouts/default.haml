!!!
%html{ :lang => "ru" }

   %head
      %meta{ "charset" => "UTF-8" }
         %title= breadcrumbs_title       
         %link{ :rel => "icon", :type => "image/png", :href => "/favicon.png" }
         %link{ :rel => "stylesheet", :href => "/screen.css", :type => "text/css", :media => "screen" }
         %link{ :href => "http://fonts.googleapis.com/css?family=PT+Serif:700&subset=cyrillic,latin", :rel => "stylesheet", :type => "text/css" }

   %body
      %table#content
         %tr
            %td{ :width => "8%" }
            %td{ :width => "64%" }
               %a{ :href => "/" }
                  %img{ :src => "/assets/img/logo.png", :height => "200", :width => "179" }
            %td{ :width => "20%" }
               #search
                  %form{ :action => "/search/", :method => "get" }
                     %input{ :type => "search", :autocomplete => "off", :placeholder => "Поиск", :name => "query", :value => "" }
            %td{ :width => "8%" }
         %tr
            %td#new-coin{ :colspan => "4" }
         %tr
            %td{ :width => "8%" }
            %td{ :width => "84%", :colspan => "2" }
               #content_container

                  %h2= @item[:post_title]
                  = render "_#{@item[:sub_layout]}" if @item[:sub_layout]
                  = yield

            %td{ :width => "8%" }

      = render '_footer'
